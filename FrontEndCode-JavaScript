function determineBreed(color, size, features) {
    color = color.toLowerCase().trim();
    size = size.toLowerCase().trim();
    features = features.toLowerCase().trim();

    if (color.includes("white") && size === "small" && features.includes("long ears")) {
        return "Holland Lop";
    } else if (color.includes("brown") && size === "large") {
        return "Flemish Giant";
    } else {
        return "Mixed Breed";
    }
}

